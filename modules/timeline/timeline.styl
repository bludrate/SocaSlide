.timeline {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.5);
    height: 150px;
    padding: 0 100px 0 0;
}

.create-slideshow {
    position: absolute;
    right: 5px;
    top: 10px;
    height: 90px;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;

    &:before {
        content: "\f03f";
        font-family: 'icon-font';
        font-size: 90px;
        color: #5C6BC0;
    }
}

.frame-list {
    margin: 0
    padding: 0
    list-style: none
    font-size: 0
    white-space: nowrap
    overflow: auto

    &__item {
        display: inline-block
        vertical-align: top
        font-size: 11px
        width: 130px;
        height: 80px;
        overflow: hidden;
        margin: 5px;
        position: relative;
        animation: create 0.1s;

        &-title {
            position: absolute;
            bottom: 0;
            left: 0;
            background: rgba(0,0,0,0.7)
            color: white;
            padding: 3px 4px;
            width: 100%;
            transition: transform 0.1s;
            transform: translateY(100%);
        }

        &:hover &-title{
            transform: translateY(0);
        }

        img {
            min-width: 100%;
            vertical-align: top;
            min-height: 100%;
        }
    }
}

@keyframes create {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}

.timeline-audios {
    overflow: auto;
    white-space: nowrap;
    margin: 0;
    padding: 0;
    list-style: none;

    &__item {
        display: inline-block;
        vertical-align: top;
        position: relative;
        padding: 5px 40px 5px 5px;
    }
    &__name {
        overflow: hidden;
        text-overflow: ellipsis;
    }
    &__duration {
        position: absolute;
        right: 5px;
        top: 5px;
    }
}