@import '../../stylus/variables'

.player:fullscreen {
    width: 100%;
    height: 100%
    background: black;
    text-align: center;

    canvas {
        top: 50%;
        position: relative;
        transform: translateY(-50%);
    }
}

.player {
    background: black;
    position: relative;
    overflow: hidden;

    canvas {
        width: 100%;
        height: auto;
        vertical-align: top;
    }
        
    &_no-activity {
        cursor: none;
    }
    
    &__load-progress {
        display: block;
        width: 0;
        background: #4b50ff;
        height: 3px;
        transition: width 0.2s ease-out;
        z-index: 2;
        
        &-wrap {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: #8695E2;
            opacity: 1;
            transition: opacity 0.2s 0.2s ease-out;

            /*&:after {
                content: '';
                position: absolute;
                right: 0;
                top: 0;
                bottom: 0;
                width: 4px;
                background: #4b50ff;
                animation: load-animation 3s infinite ease-out;
            }*/

            .player_loaded & {
                opacity: 0;
            }
        }
    }
}
