@import '../../stylus/variables'

.player:fullscreen {
    width: 100%;
    height: 100%
    background: black;
    text-align: center;

    canvas {
        top: 50%;
        position: relative;
        transform: translateY(-50%);
    }
}

.player {
    background: black;
    position: relative;
    overflow: hidden;

    canvas {
        width: 100%;
        height: auto;
        vertical-align: top;
    }
        
    &_no-activity {
        cursor: none;
    }
    
    &__load-progress {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        background: #4b50ff;
        height: 3px;
        opacity: 1;
        transition: width 0.2s ease-out, opacity 0.2s ease-out;

        .player_loaded & {
            opacity: 0;
        }
    }
}