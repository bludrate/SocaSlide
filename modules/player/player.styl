.player:fullscreen {
    width: 100%;
    height: 100%
    background: black;
    text-align: center;

    canvas {
        top: 50%;
        position: relative;
        transform: translateY(-50%);
    }
}

.player {
    background: black;
    position: relative;
    overflow: hidden;

    canvas {
        width: 100%;
        height: auto;
        vertical-align: top;
    }
        
    &_no-activity {
        cursor: none;
    }
}