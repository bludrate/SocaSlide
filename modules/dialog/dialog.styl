@import '../../stylus/variables';

.dialog {
    position: absolute;
    left: 50%;
    margin-left: -300px;
    width: 600px;
    background: white;
    top: 50px;
    box-shadow: 0 0 10px rgba(0,0,0,0.5);

    &-holder {
        position: fixed;
        top: 0;
        left: 0;
        z-index: 100;
        background: rgba(0, 0, 0, 0.7);
        width: 100%;
        height: 100%;
    }
        
    &__header {
        border-bottom: 1px solid $dividerColor;
        padding: 7px 50px 7px 25px;
        margin-bottom: 20px;
    }

    &__content {
        padding: 0 25px 20px;
    }

    &__title {
        margin: 0;
        font-size: 20px;
        line-height: 26px;
        font-weight: normal;
    }

    &__close {
        position: absolute;
        right: 0;
        top: 0;
        border: none;
        background: none;
        margin: 0;
        padding: 5px;
        
        &:before {
            display: block;
            color: $redColor;
            content: "\f29a";
            font-size: 30px;
            font-family: 'icon-font';
        }
    }
}