@import '../../stylus/variables';

.slideshow-list {
    overflow: hidden;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 10px;

    &__item {
        float: left;
        width: 200px;
        height: 130px;
        overflow: hidden;
        margin: 5px;
        position: relative;
        animation: create 0.1s;

        img {
            width: 100%;
            height: auto;
        }

        &-title {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;

            &-wrap {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                background: rgba(0,0,0,0.7);
                color: white;
                padding: 0 4px;
                transition: transform 0.1s;
            }
        }

        &-duration {
            float: right;
        }
    }

    &__buttons {
        position: absolute;
        top: 0;
        margin-top: -40px;
        width: 100%;
        left: 0;
        text-align: center;
        transition: top 0.1s;
    }

    &__item:hover &__buttons {
        top: 50%;
    }

    &__button {
        display: inline-block;
        vertical-align: top;
        width: 34px;
        height: 34px;
        transition: top 0.1s, background 0.1s;
        box-shadow: 0 1px 1px rgba(0,0,0,0.8);
        border: none;
        padding: 0;
        margin: 0 4px;
        background: $darkPrimaryColor;
        border-radius: 2px;
        cursor: pointer;
        outline: none;
        color: white;
        text-decoration: none;

        &:hover {
            background: $primaryColor;
        }

        &:active {
            box-shadow: 0 2px 3px #000 inset;
            &:before {
                text-shadow: 0 0 1px rgba(0,0,0,0.8);
                top: 1px;
            }
        }

        &:before {
            display: block;
            position: relative;
            line-height: 34px;
            font-size: 28px;
            font-family: 'icon-font';
            text-shadow: 0 1px 1px rgba(0,0,0,0.8);
        }

        &_edit:before {
            font-size: 26px;
            content: "\f196";
        }
        &_show:before {
            content: "\f0bb";
        }
        &_share:before {
            content: "\f2dd";
        }
        &_remove {
            background: $redColor;

            &:hover {
                background: lighten($redColor, 20%);
            }

            &:before {
                color: $textPrimaryColor;
                content: "\f102";
            }
        }
    }
}