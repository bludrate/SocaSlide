@import '../../stylus/variables';

.panel {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: $accentColor;
    height: 90px;
    padding: 0 45px 0 70px;

    &__btns {
        position: absolute;
        z-index: 10;
        box-shadow: -1px 0 2px rgba(0,0,0,0.6);
        right: 0;
        top: 0;
        bottom: 0;
        width: 45px;
        background: rgba(0,0,0,0.5);
        text-align: center;
    }

    &__photo-count {
        &:before {
            content: "\f23e";
            font-family: "icon-font";
            font-size: 20px;
            float: right;
            margin-left: 5px;
        }
    }

    &__duration {
        &:before {
            content: "\f11f";
            font-family: "icon-font";
            font-size: 20px;
            float: right;
            margin-left: 5px;
        }
    }

    &__info {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        z-index: 10;
        background: rgba(0,0,0,0.6);
        box-shadow: 1px 0 2px rgba(0,0,0,0.6);
        padding: 5px 2px 0 0;
        width: 68px;
        color: $textPrimaryColor;
        font-size: 14px;
        line-height: 20px;
        text-align: right;

        &-row {
            margin-bottom: 7px;
        }
    }
}

.create-slideshow {
    height: 45px;
    width: 45px;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;

    &:before {
        content: "\f246";
        font-family: 'icon-font';
        font-size: 45px;
        color: $textPrimaryColor;
    }
}

.open-settings {
    height: 45px;
    width: 45px;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    cursor: pointer;

    &:before {
        content: "\f060";
        font-family: 'icon-font';
        font-size: 35px;
        color: $textPrimaryColor;
    }
}

.frame-list {
    margin: 0
    padding: 0 22px 0 23px
    list-style: none
    font-size: 0
    z-index: 4
    position: relative
    height: 90px
    float: left

    &__wrap {
        overflow: auto
        white-space: nowrap
        position: relative
    }

    &__prev,
    &__next {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 25px;
        border: none;
        background: none;
        margin: 0;
        padding: 0;
        outline: none;
        z-index: 5;
        cursor: pointer;
        background: $primaryColor;
        box-shadow: 1px 0 1px rgba(0,0,0,0.6);
        opacity: 1;

        &[disabled] {
            opacity: 0.3;
            cursor: not-allowed;
        }

        &:before {
            display: block;
            content: "\f236"
            font-size: 26px;
            font-family: 'icon-font';
            color: $textPrimaryColor;
        }
    }

    &__next {
        right: 0;
        left: auto;
        box-shadow: -1px 0 1px rgba(0,0,0,0.6)
        &:before {
            content: "\f237"
        }
    }

    &__holder {
        overflow: hidden;
        height: 90px;
        position: relative;
    }

    &__item {
        display: inline-block;
        vertical-align: top;
        width: 130px;
        height: 80px;
        overflow: hidden;
        margin: 5px;
        position: relative;
        animation: create 0.1s;
        cursor: pointer;

        &:after {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            font-size: 50px;
            text-align: center;
            font-family: 'icon-font';
            opacity: 0;
            transition: opacity 0.1s;
            content: "\f102"
            color: $redColor;
            line-height: 80px;
        }

        &:hover:after {
            opacity: 1;
        }

        img {
            min-width: 100%;
            vertical-align: top;
            min-height: 100%;
        }
    }
}

.frame-placeholder {
    display: inline-block;
    vertical-align: top;
    width: 130px;
    height: 80px;
    margin: 5px;
    position: relative;
    animation: create 0.1s;
    background: rgba(0,0,0,0.5);

    &:after {
        content: "\f23e";
        font-family: "icon-font";
        font-size: 55px;
        line-height: 80px;
        text-align: center;
        display: block;
        color: rgba($textPrimaryColor, 0.35);
    }
}

.frame-placeholders {
    position: absolute;
    top: 0;
    left: 23px;
    z-index: 1;
}

@keyframes create {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}

.panel-audios {
    margin: 0;
    padding: 0;
    color: $textPrimaryColor;

    &__item {
        display: inline-block;
        vertical-align: top;
        position: relative;
        width: 26px;
        font-size: 12px;
        line-height: 26px;
        text-align: center;
        background: rgba(0,0,0,0.75);
        border-radius: 3px;
        animation: add-audio 0.15s;

        &:before {
            display: block;
            content: "\f1d5";
            font-family: 'icon-font';
            font-size: 18px;
        }
    }

    &__info {
        transition: opacity 0.15s ease;
        background: rgba(0,0,0,0.85);
        animation: add-audio__info 3.5s;
        white-space: nowrap;
        position: absolute;
        left: 100%;
        margin-left: 10px;
        top: 0;
        padding: 0 5px;
        border-radius: 3px;
        opacity: 0;

        &:after {
            content: '';
            border: 6px solid;
            border-color: transparent rgba(0,0,0,0.85) transparent transparent;
            position: absolute;
            left: -12px;
            top: 8px;
        }
    }

    &__item:hover &__info {
        opacity: 1;
    }

    &__name {
        float: left;
        margin-right: 10px;
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis
    }
}

@keyframes add-audio {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
@keyframes add-audio__info {
    0% {
        opacity: 1;
    }

    85% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}