@import '../../../../stylus/variables';

.panel-audios {
    margin: 0;
    padding: 0;
    color: $textPrimaryColor;

    &__item {
        display: inline-block;
        vertical-align: top;
        position: relative;
        width: 26px;
        font-size: 12px;
        line-height: 26px;
        text-align: center;
        background: rgba(0,0,0,0.75);
        border-radius: 3px;
        animation: add-audio 0.15s;

        &:before {
            display: block;
            content: "\f1d5";
            font-family: 'icon-font';
            font-size: 18px;
        }
    }

    &__info {
        transition: opacity 0.15s ease;
        background: rgba(0,0,0,0.85);
        animation: add-audio__info 3.5s;
        white-space: nowrap;
        position: absolute;
        left: 100%;
        margin-left: 10px;
        top: 0;
        padding: 0 5px;
        border-radius: 3px;
        opacity: 0;

        &:after {
            content: '';
            border: 6px solid;
            border-color: transparent rgba(0,0,0,0.85) transparent transparent;
            position: absolute;
            left: -12px;
            top: 8px;
        }
    }

    &__item:hover &__info {
        opacity: 1;
    }

    &__name {
        float: left;
        margin-right: 10px;
        max-width: 400px;
        overflow: hidden;
        text-overflow: ellipsis
    }
}

@keyframes add-audio {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
@keyframes add-audio__info {
    0% {
        opacity: 1;
    }

    85% {
        opacity: 1;
    }

    100% {
        opacity: 0;
    }
}