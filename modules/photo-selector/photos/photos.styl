@import '../../../stylus/variables';

.photo-list {
    margin: 0 -25px 0 0;
    padding: 0;
    list-style: none;
    
    &__item {
        float: left;
        width: 130px;
        height: 80px;
        overflow: hidden;
        margin: 5px;
        position: relative;
        animation: create 0.1s;
        cursor: pointer;

        &:after {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            font-size: 50px;
            text-align: center;
            font-family: 'icon-font';
            opacity: 0;
            transition: opacity 0.1s;
            content: '';
            line-height: 80px;
        }

        &.selected:after {
            opacity: 1;
            color: $primaryColor;
            content: "\f023";
        }

        &:hover:after {
            opacity: 1;
            color: $primaryColor;
            content: "\f0fb"
        }
        
        &.selected:hover:after {
            opacity: 1;
            color: $redColor;
            content: "\f102"
        }

        img {
            width: 100%;
            vertical-align: top;
        }
    }

    &_size_p &__item:after {
        line-height: 130px;
        font-size: 80px;
    }

    &_size_p &__item{
        width: 200px;
        height: 130px;
        margin: 7px 16px;
    }

    &_size_q &__item:after {
        line-height: 180px;
        font-size: 130px;
    }

    &_size_q &__item{
        width: 320px;
        height: 180px;
        margin: 10px 15px;
    }
}

@keyframes create {
    0% {
        transform: scale(0);
    }
    100% {
        transform: scale(1);
    }
}